{
    "compilerOptions": {
      "target": "ESNext",
      "jsx": "react-jsx",
      "module": "ESNext",
      "moduleResolution": "Node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["vitest"],
      "outDir": "./dist",
      "allowJs": true
    },
    "include": ["src/*", "tests/**/*", "**/*.ts", "**/*.tsx", "**/*.jsx"]
}
